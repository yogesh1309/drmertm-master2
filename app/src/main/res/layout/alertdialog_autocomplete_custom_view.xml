<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_pinktopradius"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type and Select Station"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            ></TextView>
        <ImageView
            android:visibility="gone"
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info_new_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp">


        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/autoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="#000000"
            android:visibility="visible"

            />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/lyt_action"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_whitebottomradius"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:visibility="visible"
            android:id="@+id/dialog_positive_btn"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_roundredbtn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Ok"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="visible"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_negative_btn"
            android:background="@drawable/bg_roundredbtn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Cancel"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
