<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_pinktopradius"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/info_new_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:textSize="14dp"
            android:backgroundTint="@color/lightgray"
            android:hint="Enter new password"
            android:id="@+id/et_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@null"
            />
            <ImageView
                android:id="@+id/img_newpassword"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_closepassword"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:textSize="14dp"
            android:backgroundTint="@color/lightgray"
            android:hint="Enter confirm password"
            android:id="@+id/et_conpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_weight="1"
            />

            <ImageView
                android:id="@+id/img_confpassword"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_closepassword"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            ></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/lyt_action"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_whitebottomradius"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_positive_btn"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_roundredbtn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Ok"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_negative_btn"
            android:background="@drawable/bg_roundredbtn"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Cancel"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
