<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IdCardStatusActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkbluecolour"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/backwhite"
            android:id="@+id/img_back"
            android:background="?attr/selectableItemBackground" />


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="ID card application status"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_40">

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_15"
                    android:id="@+id/ll_status_step1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_step1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/dot1"
                            android:layout_width="@dimen/dimen_30"
                            android:layout_height="@dimen/dimen_30"
                            android:src="@drawable/ic_status_circle_fill" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="1dp"
                            android:layout_height="@dimen/dimen_80"
                            android:layout_gravity="center"
                            android:background="@color/cardview_shadow_start_color" />
                    </LinearLayout>



                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_step2_deactive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/dot2"
                                android:layout_width="@dimen/dimen_30"
                                android:layout_height="@dimen/dimen_30"
                                android:src="@drawable/ic_status_circle_fill" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dimen_80"
                                android:layout_gravity="center"
                                android:background="@color/cardview_shadow_start_color" />
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_step1_deactive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/dot3"
                                android:layout_width="@dimen/dimen_30"
                                android:layout_height="@dimen/dimen_30"
                                android:src="@drawable/ic_status_circle_fill" />


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_imagescenter"
                    android:layout_toRightOf="@+id/ll_status_step1"
                    android:layout_marginLeft="@dimen/dimen_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="@dimen/dimen_60"
                                android:src="@drawable/ic_stepone" />


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="@dimen/dimen_60"
                                android:src="@drawable/ic_step_two" />


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dimen_50"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_deactive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="@dimen/dimen_60"
                                android:src="@drawable/ic_step3" />


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_images"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_toRightOf="@+id/ll_imagescenter"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                           <TextView
                               android:id="@+id/txt1"
                               android:textColor="@color/light_grey"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="App Initiated / Initiation pending"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/dimen_90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt2"
                                android:textColor="@color/light_grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending with / (None PF)"/>


                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/dimen_90"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_step3_deactive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txt3"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_grey"
                                android:text="Authority / Issuing authority"/>


                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="14dp"
                android:id="@+id/txt_html"
                android:textColor="@color/black"
                ></TextView>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_rejectedres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="14dp"
                    android:text="@string/rejected_reason"
                    android:textColor="@color/black"
                    ></TextView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="12dp"
                    android:id="@+id/txt_rejectedreason"
                    android:textColor="@color/lightgray"
                    ></TextView>

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/darkblue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_viewidcard"
                android:text="@string/view_download_id_card"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>